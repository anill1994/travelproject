@model TravelProject.Models.Sınıflar.Comment
@{
    ViewBag.Title = "YorumGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YorumGuncelle</h2>
<form action="/admin/yorumguncelle" method="post">
    <div class="form-group">
        <label>ID</label>
        @Html.TextBoxFor(i => i.ID, new { @class = "form-control", @readonly="readonly"} )
    </div>
    <div class="form-group">
        <label>KullaniciAdi</label>
        @Html.TextBoxFor(i => i.KullaniciAdi, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Mail</label>
        @Html.TextBoxFor(i => i.Mail, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Yorum</label>
        @Html.TextAreaFor(i => i.Yorum, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Gönder</button>
    </div>
</form>