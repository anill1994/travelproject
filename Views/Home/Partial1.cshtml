@using TravelProject.Models.Sınıflar
@model List<Blog>
    <div class="con-bot">
        @foreach (var item in Model)
        {
            <div class="left">
                <div class="bot-left">
                    <img style="height:150px" src="@item.BlogImage" alt="" />
                </div>
                <div class="left-text">
                    <h4>@item.Baslik</h4>
                    <span class="doller">@item.Tarih.ToString("dd.MM.yyyy")</span>
                    @if (item.Aciklama.Length > 100)
                    {
                        <p>@item.Aciklama.Substring(0, 100)</p>
                    }
                    else
                    { 
                        <p>@item.Aciklama</p>
                    }
                    <p><a href="/Blog/BlogDetay/@item.ID"><span class="read">Devamını Oku>></span></a></p>
                </div>
            </div>
        }
        @Html.Action("Partial2", "Home")
        <div class="clear"></div>
    </div>

